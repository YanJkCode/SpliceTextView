<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.android.splicetextview.SpliceTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:centerBackground="@drawable/shape_c"
        app:centerLineSpacingExtra="4dp"
        app:centerText="中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间中间内容中间"
        app:centerTextColor="@android:color/holo_green_dark"
        app:centerTextGravity="center_horizontal"
        app:centerTextSize="20dp"
        app:centerTextTypefaceNmae="kaiti.ttf"
        app:endText="后面内容"
        app:endTextColor="@android:color/holo_blue_light"
        app:endTextGravity="right"
        app:endTextSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584"
        app:startBackground="@drawable/ic_name_info_bazi_cube"
        app:startTextColor="@android:color/holo_red_light"
        app:startTextSize="10dp"
        app:startViewState="ImageView" />

    <com.android.splicetextview.SpliceTextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:centerBackground="@drawable/shape_c"
        app:centerLineSpacingExtra="4dp"
        app:centerPadding="30dp"
        app:centerText="中间内容中间"
        app:centerTextColor="@android:color/holo_green_dark"
        app:centerTextGravity="center_horizontal"
        app:centerTextSize="20dp"
        app:endText="后面内容"
        app:endTextColor="@android:color/holo_blue_light"
        app:endTextGravity="right"
        app:endTextSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:startBackground="@android:color/holo_blue_light"
        app:startText="前面内容"
        app:startTextColor="@android:color/holo_red_light"
        app:startTextSize="10dp" />

    <com.android.splicetextview.SpliceEditTextView
        android:id="@+id/edit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_c"
        app:centerHintText="123"
        app:centerHintTextColor="#B9B9BB"
        app:centerMarginLeft="22dp"
        app:centerMarginRight="10dp"
        app:centerTextMaxLines="1"
        app:centerTextSize="12sp"
        app:centerTextTypefaceNmae="kaiti.ttf"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:startMarginLeft="28dp"
        app:startText="手机的号"
        app:startTextTypefaceNmae="kaiti.ttf">

    </com.android.splicetextview.SpliceEditTextView>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加startText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="添加centerText"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="添加endText"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>